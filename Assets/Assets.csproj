      <Content Include="Content\Texts\French.xml">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
      <Content Include="Content\Texts\German.xml">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
