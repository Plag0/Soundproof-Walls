      <Content Include="Content\Sounds\SPW_EavesdroppingActivation2.ogg">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
      <Content Include="Content\Sounds\SPW_EavesdroppingAmbienceDryRoom.ogg">
